{{=<% %>=}}
---
apiVersion: batch/v1
kind: Job
metadata:
  name: {{ .Release.Namespace }}-agent-<% taskId %>
  namespace: {{ .Release.Namespace }}
spec:
  template:
    # activeDeadlineSeconds: <% maxWaitTime %>
    # ttlSecondsAfterFinished: 180 # supported from v1.21
    spec:
      imagePullSecrets:
        - name: ecr-pull-secret
      containers:
        - args:
            - "--apiserver"
            - "example.apiserver.flame.test"
            - "--notifier"
            - "example.notifier.flame.test"
            {{ if .Values.insecure }}
            - "--insecure"
            {{ end }}
          command: ["/usr/bin/flamelet"]
          image: <% imageLoc %>
          imagePullPolicy: IfNotPresent
          name: {{ .Release.Namespace }}-agent-<% taskId %>

          ports:
            - containerPort: {{ .Values.servicePort.agent }}

          resources:
            limits:
              memory: 2Gi
            requests:
              memory: 500Mi

          env:
            - name: LOG_LEVEL
              value: INFO
            - name: FLAME_TASK_ID
              value: <% taskId %>
            - name: FLAME_TASK_KEY
              value: <% taskKey %>
      restartPolicy: Never
<%={{ }}=%>
